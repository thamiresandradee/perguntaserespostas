<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guia Perguntas</title>
    <link rel="stylesheet" href="/css/style.css">

</head>
<body>
    <img src="/img/logo-mkd.png">
    <hr>
    <h1>Guia Perguntas</h1>
    <hr>
    <h3>Lista de perguntas</h3>

    <p>Nome: <%= nome %></p>
    <p>Linguagem favorita: <%= lang %></p>
    <p>Empresa: <%= empresa %></p>
    <p>Inscritos: <%= inscritos %></p>

    <ul>
    <% produtos.forEach(function(produto){  %>
        <li><strong><%= produto.nome %></strong> - R$ <%= produto.preco %></li>
    <% }) %>
    </ul>

    <% if(msg == true){ %>
        <h3>Isso é uma mensagem de erro!</h3>
    <% }else{%>
        <h3>Não há erros!</h3>
    <% } %>
</body>
</html>